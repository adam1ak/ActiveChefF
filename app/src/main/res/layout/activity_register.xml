<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".RegisterActivity">

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Username"
        android:textColor="@color/sevenf_d_gray"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/username_edit_text_reg"
        app:layout_constraintEnd_toEndOf="@+id/username_edit_text_reg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/username_edit_text_reg" />

    <EditText
        android:id="@+id/username_edit_text_reg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:width="290sp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/person"
        android:drawablePadding="14sp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Username"
        android:inputType="text"
        android:paddingVertical="10sp"
        android:paddingStart="14sp"
        android:paddingEnd="14sp"
        android:textColor="@color/d_gray"
        android:textColorHint="@color/b_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/nextTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginBottom="32dp"
        android:fontFamily="@font/montserrat_bold"
        android:text="Create account"
        android:textColor="@color/black"
        android:textSize="32sp"
        app:layout_constraintBottom_toTopOf="@+id/textView5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.111"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Email"
        android:textColor="@color/sevenf_d_gray"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/email_edit_text_reg"
        app:layout_constraintEnd_toEndOf="@+id/email_edit_text_reg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/email_edit_text_reg" />

    <EditText
        android:id="@+id/email_edit_text_reg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="32dp"
        android:width="290sp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/email"
        android:drawablePadding="14sp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Email"
        android:inputType="text"
        android:paddingVertical="10sp"
        android:paddingStart="14sp"
        android:paddingEnd="14sp"
        android:textColor="@color/d_gray"
        android:textColorHint="@color/b_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/textView3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:fontFamily="@font/montserrat_semibold"
        android:text="Password"
        android:textColor="@color/sevenf_d_gray"
        android:textSize="22sp"
        app:layout_constraintBottom_toTopOf="@+id/password_edit_text_reg"
        app:layout_constraintEnd_toEndOf="@+id/password_edit_text_reg"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/password_edit_text_reg" />

    <EditText
        android:id="@+id/password_edit_text_reg"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginBottom="100dp"
        android:width="290sp"
        android:background="@drawable/custom_input"
        android:drawableStart="@drawable/password"
        android:drawableEnd="@drawable/eye"
        android:drawablePadding="14sp"
        android:ems="10"
        android:fontFamily="@font/montserrat_semibold"
        android:hint="Password"
        android:inputType="textPassword"
        android:paddingVertical="10sp"
        android:paddingStart="14sp"
        android:paddingEnd="14sp"
        android:textColor="@color/b_gray"
        android:textColorHint="@color/b_gray"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/getStarted_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/show_password_btn"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/password_edit_text_reg"
        app:layout_constraintEnd_toEndOf="@+id/password_edit_text_reg"
        app:layout_constraintTop_toTopOf="@+id/password_edit_text_reg" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/getStarted_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="118dp"
        android:width="290sp"
        android:background="@drawable/buttton_shape"
        android:fontFamily="@font/montserrat_bold"
        android:text="Get Started"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/backImageView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="48dp"
        android:layout_marginTop="64dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/backarrow" />


</androidx.constraintlayout.widget.ConstraintLayout>